@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

   

    <a asp-action="Add" asp-controller="Class" class="ml-3">Add Current Book</a>

    <table class="table">
        <thead>
            <tr><th>Title</th><th>Author</th><th>Page</th><th>Day Started </th><th></th></tr>
        </thead>
        <tbody>
            @foreach (Class c in Model) {
            <tr>
                <td>@c.Title</td>
                <td>@c.Author</td>
                <td>@c.Page</td>
                <td>@c.DayStarted</td>
                
                <td>
                    <a asp-action="Edit" asp-controller="Class" asp-route-id="@c.ClassId"
                       class="btn btn-outline-dark">Edit</a>
                    <a asp-action="Delete" asp-controller="Class" asp-route-id="@c.ClassId"
                       class="btn btn-outline-dark">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

