@model IT3047C_FinalProj.Models.Member

<h1>@Model.Name</h1>

<h2>Favorites</h2>
<ul>
    @foreach (var book in Model.Favorites)
    {
        <li>@book.Title (by @book.Author)</li>
    }
</ul>
<a asp-controller="Members" asp-action="AddFavorite" asp-route-memberId="2"
   class="btn btn-primary">Add Book</a>
